@model MenuSistem.Models.KategoriUrunViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MainLayout.cshtml";
}


<div class="row justify-content-center mt-4">

    <div class="col-md-5">
        <div class="table-responsive">
            <h2>@ViewBag.KategoriAd Ürünleri Yönetimi</h2>
            <br /> 
            <table class="table table-bordered table-striped border-dark">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Detay</th>
                        <th>Fiyat</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var urun in Model.Urunler)
                    {
                        <tr>
                            <td>@urun.Urunad</td>
                            <td>@urun.UrunDetay</td>
                            <td>@urun.UrunFiyat</td>
                            <td><img src="@urun.UrunGorsel" alt="@urun.Urunad" class="img-thumbnail" style="max-width: 100px; max-height: 100px;"></td>
                            <td>
                                <a href="@Url.Action("UrunGetir", "Urun", new { id = urun.Urunid })" class="btn btn-primary">Güncelle</a>
                                <a href="@Url.Action("UrunSil", "UrunYonet", new { id = urun.Urunid })" class="btn btn-danger">SİL</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

        </div>

      

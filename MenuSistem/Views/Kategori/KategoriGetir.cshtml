@model MenuSistem.Models.Entities.TBLKATEGORİLER
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/MainLayout.cshtml";
}



<h2 class="text-center mt-4">KategoriGetir</h2>

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post, new { @class = "text-center mt-4 " }))
{
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="form-group border border-dark rounded p-4 ">
                @Html.LabelFor(m => m.Kategoriid)
                @Html.TextBoxFor(m => m.Kategoriid, new { @class = "form-control border border-dark text-center" })
                <br />  
                @Html.LabelFor(m => m.KategoriAd)
                @Html.TextBoxFor(m => m.KategoriAd, new { @class = "form-control border border-dark text-center" })
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-3">
            <div class="form-group">
                <button class="btn btn-warning">Kategori Güncelle</button>
            </div>
        </div>
    </div>
}

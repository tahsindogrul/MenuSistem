@model MenuSistem.Models.Entities.TBLURUNLER
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/MainLayout.cshtml";
}

<h2 class="text-center mt-4">UrunGetir</h2>


@using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post, new { @class = "text-center" }))
{

    <div class="row justify-content-center">
        <div class="col-md-4 ">
            <div class="form-group border border-dark rounded p-3">

                @Html.LabelFor(m => m.Urunid)
                @Html.TextBoxFor(m => m.Urunid, new { @class = "form-control border-dark" })
                <br />
                @Html.LabelFor(m => m.Urunad)
                @Html.TextBoxFor(m => m.Urunad, new { @class = "form-control border-dark" })
                <br />
                @Html.LabelFor(m => m.UrunDetay)
                @Html.TextBoxFor(m => m.UrunDetay, new { @class = "form-control border-dark " })
                <br />
                @Html.LabelFor(m => m.UrunKategori)
                @Html.DropDownListFor(m => m.TBLKATEGORİLER.Kategoriid, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control border-dark " })


                <br />
                @Html.LabelFor(m => m.UrunFiyat)
                @Html.TextBoxFor(m => m.UrunFiyat, new { @class = "form-control border-dark" })
                <br />
                @Html.LabelFor(m => m.UrunGorsel)
                <input type="file" name="UrunGorsel"  class="form-control border-dark" />
              
                <br />

                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <div class="form-group">
                            <button class="btn btn-warning">Ürünü Güncelle</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   






}